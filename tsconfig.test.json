{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "jest-extended", "node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "*": ["*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
